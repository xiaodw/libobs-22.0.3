				<ComboItem text="9" height="24"/>
				<ComboItem text="10" height="24"/>
				<ComboItem text="11" height="24"/>
				<ComboItem text="12" height="24"/>
				<ComboItem text="13" height="24"/>
				<ComboItem text="14" height="24"/>
				<ComboItem text="15" height="24"/>
				<ComboItem text="16" height="24"/>
				<ComboItem text="17" height="24"/>
				<ComboItem text="18" height="24"/>
				<ComboItem text="19" height="24"/>
				<ComboItem text="20" height="24"/>
			</Combo>			
			
			<Control width="10"/>	
			<Label text="描边颜色:" width="60"/>
			<Button name="BOutlineColor" tag="16777215" text="选择颜色" width="75" height="24" default="NormalBtn"/>
			
			<Control width="10"/>	
			
			<Label text="描边透明:" width="62" textcolor="#666666"/>
			<Slider name="SOutlineAlpha" padding="0,7,0,7" min="0" max="100" value="100"/>
			
		</HorizontalLayout>
		<Control height="15"/>
		<HorizontalLayout height="24">	
			<Label text="滚动速度:" width="60"/>
			<Option name="OSpeed0" width="40" text="无" group="Speed" default="Radio" selected="true"/>
			<Option name="OSpeed1" width="40" text="慢" group="Speed" default="Radio"/>
			<Option name="OSpeed2" width="40" text="中" group="Speed" default="Radio"/>
			<Option name="OSpeed3" width="40" text="快" group="Speed" default="Radio"/>
		</HorizontalLayout>
		
		<Control height="15"/>
		<HorizontalLayout height="35">
		  <Control />
		  
		  <Button name="acceptbtn" width="140" height="35" text="确定" default="AcceptBtn"/>
		  
		  <Control />
		</HorizontalLayout>
	</VerticalLayout>
  </VerticalLayout>  
</Window>

 
