<?xml version="1.0" encoding="UTF-8"?>
<Window size="570,400" caption="0,0,0,36" disabledfontcolor="#6a6a6a" defaultfontcolor="#333333"> 
  <Font name="微软雅黑" id="0" size="13" default="true"/>
  <Font name="微软雅黑" id="1" size="14"/>
  
  <VerticalLayout bkcolor="#FFFFFFFF">
    <HorizontalLayout height="36" bkcolor="#FFee4b39" inset="10,0,0,0">
        <Label text="添加文字" textcolor="#ffffff" font="1"/>
        <Button name="closebtn" default="DlgCloseBtn"/>            
    </HorizontalLayout>

	<VerticalLayout inset="36,20,36,0">
		<Edit name="EText" height="90" multiline="true" bkimage="file='image/list_bg.png' corner='3,3,3,3'" maxchar="1000"/>
		
		<Control height="16"/>
		
		<HorizontalLayout height="24">
			<Label text="字体:" width="35"/>
			<Combo name="CFontList" width="75" itemtextcolor="#333333">
			</Combo>
			
			<Control width="10"/>
			<Label text="字体颜色:" width="60"/>
			<Button name="BFontColor" tag="65280" text="选择颜色" width="75" height="24" default="NormalBtn"/>
			
			<Control width="10"/>
			<Label text="字体大小:" width="60"/>
			<Combo name="CFontSize" width="60" itemtextcolor="#333333">
				<ComboItem text="6" height="24"/>
				<ComboItem text="7" height="24"/>
				<ComboItem text="8" height="24"/>
				<ComboItem text="9" height="24"/>
				<ComboItem text="10" height="24"/>
				<ComboItem text="12" height="24"/>
				<ComboItem text="14" height="24"/>
				<ComboItem text="16" height="24"/>
				<ComboItem text="18" height="24"/>
				<ComboItem text="20" height="24"/>
				<ComboItem text="24" height="24"/>
				<ComboItem text="26" height="24"/>
				<ComboItem text="28" height="24"/>
				<ComboItem text="36" height="24" selected="true"/>
				<ComboItem text="48" height="24"/>
				<ComboItem text="72" height="24"/>
			</Combo>
			<Control width="10"/>
			<Option name="OBold" default="CheckBox" text="粗体" width="55" textcolor="#666666"/>
			<Option name="OItalic" default="CheckBox" text="斜体" width="55" textcolor="#666666"/>
		</HorizontalLayout>

		<Control height="15"/>
		<Option name="OSetLayout" default="CheckBox" height="24" width="98" text="自定义文本区" textcolor="#666666"/>
		<Control height="10"/>
		
		<HorizontalLayout name="HTextLayout" height="24" inset="20,0,0,0">
			<Label text="宽度:" width="35" enabled="false"/>
			<Edit name="EWidth" width="54" text="200" enabled="false" numberonly="true"/>
			
			<Control width="10"/>
			
			<Label text="左右对齐:" width="60" enabled="false"/>
			<Combo name="CAlign" width="75" itemtextcolor="#333333" enabled="false">
				<ComboItem text="向左对齐" height="24"/>
				<ComboItem text="居中" height="24" selected="true"/>
				<ComboItem text="向右对齐" height="24"/>
			</Combo>			
			
			<Control width="10"/>
			
			<Label text="垂直对齐:" width="60" enabled="false"/>
			<Combo name="CValign" width="60" itemtextcolor="#333333" enabled="false">
				<ComboItem text="顶部" height="24"/>
				<ComboItem text="居中" height="24" selected="true"/>
				<ComboItem text="底部" height="24"/>
			</Combo>
			<Control width="10"/>			
			
			<Option name="OWrap" default="CheckBox" text="自动换行" width="78" textcolor="#666666" enabled="false"/>
		</HorizontalLayout>
		<Control height="15"/>
		<HorizontalLayout height="24">
			<Label text="描边宽度:" width="60"/>

			<Combo name="COutlineSize" width="48" itemtextcolor="#333333">
				<ComboItem text="0" height="24" selected="true"/>
				<ComboItem text="1" height="24"/>
				<ComboItem text="2" height="24"/>
				<ComboItem text="3" height="24"/>
